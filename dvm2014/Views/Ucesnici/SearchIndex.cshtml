<script>
$(document).ready(function () {
    $("#searchUplataSite").click(function () {
            var checked = [];
            if (this.checked == true) {
                $("input[name='searchUplataUcestvo']:checked").each(function () {
                    checked.push(parseInt($(this).val()));
                });
                $("input[name='searchUplataSmestuvanje']:checked").each(function () {
                    checked.push(parseInt($(this).val()));
                });
                $("input[name='searchUplataNacVecera']:checked").each(function () {
                    checked.push(parseInt($(this).val()));
                });
                $("input[name='searchUplataProvizija']:checked").each(function () {
                    checked.push(parseInt($(this).val()));
                });
                $("input[name='searchUplataDopo']:checked").each(function () {
                    checked.push(parseInt($(this).val()));
                });
            }
            $("input[name='searchUplataUcestvo']").prop('checked', this.checked);
            $("input[name='searchUplataSmestuvanje']").prop('checked', this.checked);
            $("input[name='searchUplataNacVecera']").prop('checked', this.checked);
            $("input[name='searchUplataProvizija']").prop('checked', this.checked);
            $("input[name='searchUplataDopo']").prop('checked', this.checked);
        });

        $("input[name='searchUplataUcestvo']").click(function () {
            $("input[name='searchUplataUcestvo']").each(function () {
                if (this.checked == false) {
                    checked.splice(parseInt($(this).val()));
                } else {
                    checked.push(parseInt($(this).val()));
                }
            });
           
        });

        $("input[name='searchUplataSmestuvanje']").click(function () {
            $("input[name='searchUplataSmestuvanje']").each(function () {
                if (this.checked == false) {
                    checked.splice(parseInt($(this).val()));
                } else {
