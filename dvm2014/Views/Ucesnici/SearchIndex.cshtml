        $("input[name='searchUplataNacVecera']").click(function () {
            $("input[name='searchUplataNacVecera']").each(function () {
                if (this.checked == false) {
                    checked.splice(parseInt($(this).val()));
                } else {
                    checked.push(parseInt($(this).val()));
                }
            });

        });

        $("input[name='searchUplataProvizija']").click(function () {
            $("input[name='searchUplataProvizija']").each(function () {
                if (this.checked == false) {
                    checked.splice(parseInt($(this).val()));
                } else {
                    checked.push(parseInt($(this).val()));
                }
            });

        });

        $("input[name='searchUplataDopo']").click(function () {
            $("input[name='searchUplataDopo']").each(function () {
                if (this.checked == false) {
                    checked.splice(parseInt($(this).val()));
