        <tr><td colspan="2"><br /></td></tr>
            <tr>
                <td  colspan="2">Name and Surname: <b>@Model.ImePrezime</b></td>
            </tr>
        <tr><td colspan="2">--------------------------------------------------------------------------------------------------------------</td></tr>
            <tr>
                <td colspan="2">Organization: <b>@Model.Organizacija</b></td>
            </tr>
        <tr><td colspan="2">--------------------------------------------------------------------------------------------------------------</td></tr>
            <tr>
                <td>Registration Fee:</td><td align="right"><b>@Html.DisplayFor(model => model.Ucestvo,"Currency") @Model.Valuta</b></td>
            </tr>
       @*<tr><td colspan="2">--------------------------------------------------------------------------------------------------------------</td></tr>
            <tr>
                <td>Accommodation:</td><td align="right"><b>@Html.DisplayFor(model => model.Smestuvanje,"Currency") @Model.Valuta</b></td>
            </tr>*@
