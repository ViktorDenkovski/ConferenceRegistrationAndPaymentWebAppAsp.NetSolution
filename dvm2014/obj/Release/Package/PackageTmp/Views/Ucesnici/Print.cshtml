@model dvm2014.Models.Ucesnici

@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
</head>
<body>
    <div align="right">UID: @Model.UcesnikID</div>
    <img src="@Context.Server.MapPath("~/Images/memorandum-newtop.png")" width="520" height="70"/>
    <table width="443">
        
        <tr><td colspan="2"><br /></td></tr>
        <tr><td colspan="2"><br /></td></tr>
        <tr>
            <td colspan="2" align="center">
                <h3>9<sup>th</sup> International Scientific Meeting - "Days of Veterinary Medicine 2022"</h3>
            </td>
        </tr>
        <tr><td colspan="2"><br /></td></tr>
        <tr>
            <td  colspan="2" align="center">
                <b>22 - 25 September 2022</b>
            </td>
        </tr>
        <tr>
            <td  colspan="2" align="center">
                <b>Ohrid, R. N. Macedonia</b>
            </td>
        </tr>
        <tr><td colspan="2"><br /></td></tr>
        <tr>
            <td align="right"  colspan="2">Date: <b>@DateTime.Now.Date.ToString("dd/MM/yyyy")</b></td>
        </tr>
