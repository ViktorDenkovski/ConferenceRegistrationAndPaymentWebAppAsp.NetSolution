            <tr>
                <td>Social Event:</td><td align="right"><b>@Html.DisplayFor(model => model.NacVecera,"Currency") @Model.Valuta</b></td>
            </tr>
        
        <tr><td colspan="2">--------------------------------------------------------------------------------------------------------------</td></tr>
           <tr>
                <td>Gala Dinner:</td><td align="right"><b>@Html.DisplayFor(model => model.DopoTrosoci,"Currency") @Model.Valuta</b></td>
           </tr>
        <tr><td colspan="2">--------------------------------------------------------------------------------------------------------------</td></tr>
            <tr>
               @{decimal total = 0;
                <td >Total:</td><td align="right"><b>@{total = Model.Ucestvo + Model.Smestuvanje + Model.NacVecera + Model.DopoTrosoci;} @total.ToString("N2") @Model.Valuta</b></td>
                }
            </tr>
        <tr><td colspan="2"><br /></td></tr>
        <tr><td colspan="2"><br /></td></tr>
        <tr><td colspan="2"><br /></td></tr>
        <tr><td colspan="2"><br /></td></tr>
